{
  "task_name": "homepage-implementation",
  "verification": {
    "max_gate_failures": 3,
    "coverage_threshold": 0.8,
    "min_quality_score": 0.9,
    "gates": [
      {
        "name": "typecheck",
        "command": [
          "bun",
          "run",
          "typecheck"
        ],
        "on_failure": "continue"
      },
      {
        "name": "lint",
        "command": [
          "bun",
          "run",
          "lint"
        ],
        "on_failure": "continue"
      },
      {
        "name": "coverage",
        "command": [
          "bun",
          "run",
          "test:coverage"
        ],
        "on_failure": "continue"
      }
    ]
  },
  "compliance": {
    "deterministic_checks": [
      {
        "type": "no_pattern",
        "pattern": "Homepage placeholder - implement the design",
        "description": "Replaces scaffold placeholder content"
      },
      {
        "type": "import_present",
        "pattern": "Get Started",
        "description": "Includes hero call-to-action copy"
      },
      {
        "type": "import_present",
        "pattern": "Contact",
        "description": "Includes contact navigation copy"
      },
      {
        "type": "import_present",
        "pattern": "Features",
        "description": "Includes a features section heading"
      },
      {
        "type": "no_pattern",
        "pattern": "style={{",
        "description": "Avoids inline styles"
      },
      {
        "type": "file_exists",
        "pattern": "src/components/**/*.tsx",
        "description": "Uses component structure"
      }
    ],
    "requirements": [
      {
        "id": "req-header-nav",
        "description": "Header contains logo and Home/About/Contact navigation.",
        "check": {
          "type": "import_present",
          "pattern": "Contact",
          "description": "Header navigation includes Contact entry"
        },
        "required_test_patterns": [
          "Home",
          "About",
          "Contact"
        ]
      },
      {
        "id": "req-hero-cta",
        "description": "Hero section includes headline, supporting text, and CTA.",
        "check": {
          "type": "import_present",
          "pattern": "Get Started",
          "description": "Hero call-to-action copy exists"
        },
        "required_test_patterns": [
          "Get Started",
          "Build Better Products Faster"
        ]
      },
      {
        "id": "req-features-grid",
        "description": "Features section renders three feature cards.",
        "check": {
          "type": "import_present",
          "pattern": "Everything You Need",
          "description": "Features section heading exists"
        },
        "required_test_patterns": [
          "Everything You Need",
          "Lightning Fast",
          "Secure by Default",
          "Team Collaboration"
        ]
      },
      {
        "id": "req-footer",
        "description": "Footer contains copyright text.",
        "check": {
          "type": "import_present",
          "pattern": "All rights reserved",
          "description": "Footer copyright copy exists"
        },
        "required_test_patterns": [
          "All rights reserved"
        ]
      }
    ]
  },
  "visual": {
    "reference_image": "./reference/homepage.png",
    "screenshot_command": [
      "bun",
      "run",
      "capture-screenshot"
    ],
    "threshold": 0.95
  },
  "weights": {
    "functional": 0.4,
    "compliance": 0.25,
    "visual": 0.2,
    "efficiency": 0.15
  },
  "baseline_scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "lint": "bunx ultracite lint src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "capture-screenshot": "bun run scripts/capture-screenshot.ts"
  }
}